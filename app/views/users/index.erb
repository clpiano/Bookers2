<%# /users...ユーザーのアカウントページ(usersを選択)%>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_id" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      </div>


<%#投稿フォーム start%>
<h2 class="mt-3">New book</h2>

<form action="/books" accept-charset="UTF--8" method="post">
  <%= form_with model: @book do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>

    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <textarea class="form-control book_body" name="book[body]" id="bookbody"></textarea>
    </div>
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  <% end %>
</form>
<%#投稿フォームここまで%>

</div>

