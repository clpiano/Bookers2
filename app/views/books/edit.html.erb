<%# books/id/edit...投稿編集ページ(Editを押すととぶ)%>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <form action="/books/:id" accept-charset="UTF-8" method="post">

        <%#= form_with model: @book do |f| %>

        <div class="form-group">
          <label for="book_title">Title</label>
          <%#= f.text_field :title %>
          <input class="form-control book_title" type="text" value="?" name="book[title]" id="book_title">
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        </div>
      </form>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>