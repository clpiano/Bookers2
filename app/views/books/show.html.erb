<%# books/id...投稿詳細ページ(投稿後のページorタイトル選択) %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/#{id}/edit"><i class="fas fa-user-cog"></i></a>
      </div>

      <%#投稿フォーム start%>
      <h2 class="mt-3">New book</h2>

      <form action="/books" accept-charset="UTF--8" method="post">
        <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <textarea class="form-control book_body" name="book[body]" id="bookbody"></textarea>
        </div>
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        <% end %>
      </form>
<%#投稿フォームここまで%>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <a href="/users/:id"><%= image_tag @book.user.get_profile_image(100,100) %><br><%= @book.user.name %></a>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book) %>
              <% end %>
              <%#<a class="btn btn-sm btn-success edit_book_id" href="/books/:id/edit">Edit</a>%>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path, method: :delete,"data-confirm" => "本当に消しますか？" %>
              <% end %>
                <%#<a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_id" rel="nofollow" data-method="delete" href="/books/:id">Destroy</a>%>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

